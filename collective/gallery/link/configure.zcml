<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="collective.gallery">

  <adapter
    factory=".picasaweb.Link"
    name="picasaweb"
    />
  <adapter
    factory=".flickr.Link"
    name="flickr"
    />
  <adapter zcml:condition="installed BeautifulSoup"
    factory=".facebook.Link"
    name="facebook"
    />
</configure>